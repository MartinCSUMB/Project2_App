<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Back"
        android:src="@drawable/ic_action_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/adminTextView"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:layout_margin="16dip"
        android:gravity="center"
        android:text="Welcome Admin"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/manageItemsButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dip"
        android:text="manage items"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminTextView"
        />
    <Button
        android:id="@+id/manageAislesButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dip"
        android:text="manage aisles"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manageItemsButton"
        />
    <Button
        android:id="@+id/getInventoryButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dip"
        android:text="get inventory"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manageAislesButton"
        />
    <Button
        android:id="@+id/manageUsersButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dip"
        android:text="Manage Users"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getInventoryButton" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dip"
        android:text="return to previous screen"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getInventoryButton"
        />




</androidx.constraintlayout.widget.ConstraintLayout>