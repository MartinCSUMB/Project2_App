<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <TextView
        android:id="@+id/adminTextView"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:layout_margin="16dip"
        android:gravity="center"
        android:text="Welcome Admin"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/manageItemsButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dip"
        android:text="manage items"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminTextView"
        />
    <Button
        android:id="@+id/manageAislesButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dip"
        android:text="manage aisles"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manageItemsButton"
        />
    <Button
        android:id="@+id/getInventoryButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dip"
        android:text="get inventory"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manageAislesButton"
        />
    <Button
        android:id="@+id/manageUsersButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dip"
        android:text="Manage Users"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getInventoryButton" />



</androidx.constraintlayout.widget.ConstraintLayout>