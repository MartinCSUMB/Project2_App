<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchListActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:id="@+id/searchedProductTextView"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="Searched Product"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/searchedProductsListView"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@+id/searchedProductTextView"
        />
    <Button
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:id="@+id/searchedReturnButton"
        android:layout_margin="16dp"
        android:text="return"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_editor_absoluteY="528dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/searchedProductsListView"
        />

</androidx.constraintlayout.widget.ConstraintLayout>